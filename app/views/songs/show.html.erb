<p id="notice"><%= notice %></p>

<% @id = YoutubeSearch.search("#{@song.name} #{@song.artist.name}", 'genre' => 16, 'orderby' => 'relevance').first['video_id'] %>
<p>
  <h1><%= @song.name %></h1>
</p>

<p>Music Video</p>
<iframe width="420" height="315" src="http://www.youtube.com/embed/<%= @id %>" frameborder="0" allowfullscreen></iframe><br>
  
  <p>Artist: <%= link_to "#{@song.artist.name}", @song.artist %> - 
  	Genre: <%= link_to "#{@song.genre.name}", @song.genre %></p>
  	

<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>


